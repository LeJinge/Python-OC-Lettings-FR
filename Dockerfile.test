# Utilisez une image de base avec Python 3.10
FROM python:3.10-slim

# Installez les dépendances de base
COPY requirements.txt .
RUN apt update
RUN apt -f install -y
RUN apt-get install -y wget
RUN wget -q https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
RUN apt-get install ./google-chrome-stable_current_amd64.deb -y
RUN echo "Chrome: " && google-chrome --version

# Installez les dépendances de test
COPY requirements-tests.txt .
RUN pip install --no-cache-dir --no-build-isolation -r requirements-tests.txt && \
    rm -rf /root/.cache/pip

# Copiez l'application
COPY . .

# Définez le répertoire de travail
WORKDIR /app

# Commande par défaut pour exécuter les tests
CMD ["python", "manage.py", "test"]
