# Utilisez une image de base avec Python 3.11
FROM python:3.11-slim

# Installez les dépendances de base
COPY requirements.txt .
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Installez les dépendances de test
COPY requirements-tests.txt .
RUN pip install --no-cache-dir -r requirements-tests.txt

# Copiez l'application
COPY . .

# Définez le répertoire de travail
WORKDIR /app

# Commande par défaut pour exécuter les tests
CMD ["pytest", "--cov=myapp", "tests/"]
